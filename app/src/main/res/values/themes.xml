<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.ProfNotes" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/lightestGray</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark</item>
        <item name="colorSecondaryVariant">@color/lightGray</item>
        <item name="colorOnSecondary">@color/gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/white</item>
    </style>
<!-- Светлая тема-->
    <style name="Theme.ProfNotes.NoDark" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lightestGray</item>
        <item name="colorPrimaryVariant">@color/lightestGray</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark</item>
        <item name="colorSecondaryVariant">@color/lightGray</item>
        <item name="colorOnSecondary">@color/gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Splash" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="LogoTitle">
        <item name="android:textSize">36sp</item>
    </style>

    <style name="TextH1">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/circe_extra_bold</item>
    </style>

    <style name="TextH1.Large">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextH2">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/circe_bold</item>
    </style>

    <style name="TextH3">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/circe_bold</item>
    </style>

    <style name="TextH4">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/circe_bold</item>
    </style>

    <style name="TextH5">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/circe_bold</item>
    </style>

    <style name="r">
        <item name="cornerSize">50%</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item
            name="iconSize">
        </item>
    </style>

    <style name="Switch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/yellow</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/black
        </item>
        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/lightestGray
        </item>
    </style>

    <style name="TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabContentStart">8dp</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="shapeAppearanceOverlay">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">27dp</item>
    </style>

</resources>