<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:background="@drawable/bg_rounded_card"
android:padding="16dp">

<com.makeramen.roundedimageview.RoundedImageView
    android:id="@+id/iv_AvatarUser"
    android:layout_width="45dp"
    android:layout_height="45dp"
    android:src="@mipmap/ic_launcher"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:riv_corner_radius="8dp"
    tools:background="@color/dark" />

<TextView
    android:id="@+id/tv_title"
    style="@style/TextH2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Школа разработки 2022"
    android:layout_marginStart="12dp"
    app:layout_constraintStart_toEndOf="@+id/iv_AvatarUser"
    app:layout_constraintTop_toTopOf="parent" />

<TextView
    android:id="@+id/vt_time_note"
    style="@style/TextH3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Понедельник, 16:00 - 18:00"
    android:textColor="@color/gray"
    android:layout_marginStart="12dp"
    app:layout_constraintStart_toEndOf="@+id/iv_AvatarUser"
    app:layout_constraintTop_toBottomOf="@+id/tv_title" />

<TextView
    android:id="@+id/tvDescription"
    style="@style/TextH3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:text="Первое занятие школы разработки,не пропусти"
    app:layout_constraintTop_toBottomOf="@+id/iv_AvatarUser"
    />
<com.makeramen.roundedimageview.RoundedImageView
    android:id="@+id/ivUser1"
    android:layout_width="22dp"
    android:layout_height="22dp"
    android:layout_marginTop="5dp"
    android:src="@drawable/ic_test_user"
    app:layout_constraintTop_toBottomOf="@+id/tvDescription"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="@+id/tvDescription"
    app:riv_corner_radius="11dp" />

<com.makeramen.roundedimageview.RoundedImageView
    android:id="@+id/ivUser2"
    android:layout_width="22dp"
    android:layout_height="22dp"
    android:layout_marginStart="-11dp"
    android:src="@drawable/ic_test_user"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toEndOf="@+id/ivUser1"
    app:riv_border_color="@color/dark"
    app:riv_border_width="1dp"
    app:riv_corner_radius="11dp" />

<com.makeramen.roundedimageview.RoundedImageView
    android:id="@+id/ivUser3"
    android:layout_width="22dp"
    android:layout_height="22dp"
    android:layout_marginStart="-11dp"
    android:src="@drawable/ic_test_user"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toEndOf="@+id/ivUser2"
    app:riv_border_color="@color/dark"
    app:riv_border_width="1dp"
    app:riv_corner_radius="11dp" />
</androidx.constraintlayout.widget.ConstraintLayout>